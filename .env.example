# MindVault Configuration
# Copy this file to .env and fill in your actual values

# Twitter/X Authentication (Required)
# Get these from your browser cookies after logging into Twitter/X
TWITTER_CT0=your_ct0_cookie_here
TWITTER_AUTH_TOKEN=your_auth_token_here

# Optional: Separate scraper credentials for rate limiting
# Use different Twitter account credentials if you want to separate
# bookmark exports from content scraping
TWITTER_SCRAPER_CT0=your_scraper_ct0_cookie_here
TWITTER_SCRAPER_AUTH_TOKEN=your_scraper_auth_token_here

# Database Configuration
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/
# Database name
DB_NAME=mindvault

# Data Storage Paths (Optional - uses defaults if not specified)
# Base directory for all MindVault data
BASE_DIR=/home/user/.mindvault
# Specific paths for different data types
BOOKMARKS_PATH=${BASE_DIR}/twitter/bookmarks
TWEET_DATA_DIR=${BASE_DIR}/twitter/tweet_data
EXTRACTED_DATA_DIR=${BASE_DIR}/twitter/extracted_data
MEDIA_DIR=${BASE_DIR}/twitter/media

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Log directory
LOG_DIR=${BASE_DIR}/logs

# Performance Settings
# Maximum number of concurrent downloads
MAX_CONCURRENT_DOWNLOADS=5
# Request timeout in seconds
REQUEST_TIMEOUT=30
# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# AI Processing Configuration (Optional)
# Google GenAI API key (if using)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
# OpenAI API key (if using)
OPENAI_API_KEY=your_openai_api_key_here
# LiteLLM configuration
LITELLM_MODEL=gpt-3.5-turbo

# Advanced Settings (Optional)
# Batch size for processing
BATCH_SIZE=100
# Cache size for in-memory storage
CACHE_SIZE=1000
# Enable/disable media downloads
ENABLE_MEDIA_DOWNLOADS=true
# Maximum file size for media downloads (in MB)
MAX_MEDIA_FILE_SIZE=100

# Development Settings (Optional)
# Enable debug mode
DEBUG=false
# Enable verbose logging
VERBOSE=false
# Skip SSL verification (for development only)
SKIP_SSL_VERIFICATION=false

# MongoDB Atlas Configuration (Alternative to local MongoDB)
# If using MongoDB Atlas, replace MONGODB_URI with your Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
# DB_NAME=mindvault

# Security Settings (Optional)
# Enable data encryption
ENABLE_ENCRYPTION=false
# Encryption key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting Configuration (Optional)
# Twitter API rate limit settings
TWITTER_RATE_LIMIT_REQUESTS_PER_WINDOW=300
TWITTER_RATE_LIMIT_WINDOW_SECONDS=900
# AI API rate limit settings
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Backup Configuration (Optional)
# Enable automatic backups
ENABLE_AUTO_BACKUP=false
# Backup directory
BACKUP_DIR=${BASE_DIR}/backups
# Backup frequency in hours
BACKUP_FREQUENCY_HOURS=24

# Notification Settings (Optional)
# Email notifications for errors (requires SMTP configuration)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# Webhook Configuration (Optional)
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url

# Browser Automation Settings (Optional)
# Browser executable path (auto-detected if not specified)
BROWSER_EXECUTABLE_PATH=/usr/bin/chromium
# Browser user data directory
BROWSER_USER_DATA_DIR=${BASE_DIR}/browser_data
# Enable headless mode
HEADLESS_BROWSER=true

# Proxy Configuration (Optional)
# HTTP proxy
HTTP_PROXY=http://proxy.example.com:8080
# HTTPS proxy
HTTPS_PROXY=https://proxy.example.com:8080
# No proxy for these domains
NO_PROXY=localhost,127.0.0.1,.local

# Cloud Storage Configuration (Optional)
# AWS S3 configuration for media storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-mindvault-bucket

# Google Cloud Storage configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name

# Plugin Configuration (Optional)
# Enable/disable specific plugins
ENABLE_BROWSER_PLUGIN=true
ENABLE_TWITTER_PLUGIN=true
ENABLE_AI_PLUGIN=true
# Custom plugin directory
PLUGIN_DIR=${BASE_DIR}/plugins

# Monitoring Configuration (Optional)
# Enable performance monitoring
ENABLE_MONITORING=false
# Metrics collection interval in seconds
METRICS_INTERVAL=300
# Health check endpoint port
HEALTH_CHECK_PORT=8080

# Development and Testing (Optional)
# Test database name
TEST_DB_NAME=mindvault_test
# Mock AI responses for testing
MOCK_AI_RESPONSES=false
# Skip time-consuming operations in tests
SKIP_SLOW_TESTS=false

# Custom Configuration (Optional)
# Add any custom configuration variables here
# CUSTOM_SETTING=value
# ANOTHER_CUSTOM_SETTING=another_value
